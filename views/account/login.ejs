<!-- head -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %> 

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %> 

<div class="form">
<form id="loginForm" action="/account/login" method="post">
    <p>email <input type="email" name="account_email" id="accountEmail" placeholder="email/username" required value="<%= locals.account_email %>"></p>
    <div>Password must be 12 characters, at least 1 uppercase, 1 number, 1 speacial character.
      <input type="password" name="account_password" placeholder="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></div>
    <label>Password <input type="submit" name="login" required placeholder=""></label>
    <a href="./register">Sign Up</a>
</form>
</div>
